# SkitourScout Environment Configuration
# Copy this file to .env and fill in your values

# LLM Provider: 'ollama' (local, free) or 'openrouter' (API)
VITE_LLM_PROVIDER=ollama

# Ollama Configuration (when using ollama)
VITE_OLLAMA_URL=http://localhost:11434
VITE_OLLAMA_MODEL=llama3.2

# OpenRouter Configuration (when using openrouter)
# Get your free API key from: https://openrouter.ai/keys
VITE_OPENROUTER_API_KEY=
VITE_OPENROUTER_MODEL=meta-llama/llama-3.2-3b-instruct:free

# Default region (Tatry, Alps, Dolomites, Pyrenees)
VITE_DEFAULT_REGION=Tatry

# Auto-refresh interval in minutes (0 = manual only)
VITE_REFRESH_INTERVAL=30
